<div class="row">
  <div class="col-md-6">
    <% if @product.cover_image.present? %>
      <%= image_tag(@product.cover_image.url(:cover), class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @product.title %> </h2>
    <div style="height:170px;">
      <p>
      <%= @product.description %>
      </p>
    </div>
    <div class="product-price"> $ <%= @product.price %> </div>
    <div class="pull-left">
      <%= link_to("加入購物車", add_to_cart_product_path(@product.permalink), method: :post, class: "btn btn-primary") %>
    </div>
  </div>
</div>

